{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",
// browser action as opposed to page action (browser wide, not for a particular page)
  "browser_action": {
    "default_icon": "icon.png",
    //show a minipage when clicking the extension button
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
    // "https://ajax.googleapis.com/"
  ]
}