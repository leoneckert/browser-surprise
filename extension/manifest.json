{
  "manifest_version": 2,

  "name": "Browser Surprise",
  "description": "this is a surprising browser extension",
  "version": "1.0",
// browser action as opposed to page action (browser wide, not for a particular page)
  "browser_action": {
    "default_icon": "icon.png",
    //show a minipage when clicking the extension button
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs", 
    "http://*/*", 
    "https://*/*"
  ],
  "content_scripts": [
        {
          "matches": ["https://tisch.nyu.edu/itp/*", "http://leoneckert.com/*"],
          "js": ["jquery.js", "inject.js"]
        }
  ],
  "web_accessible_resources": [
      "manifest.json"
  ]
}