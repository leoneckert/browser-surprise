{
  "manifest_version": 2,

  "name": "Browser Surprise",
  "description": "this is a surprising browser extension",
  "version": "1.0",
// browser action as opposed to page action (browser wide, not for a particular page)
  "browser_action": {
    "default_icon": "icon128.png",
    //show a minipage when clicking the extension button
    "default_popup": "popup.html"
  },
  "icons": { "19": "icon19.png",
            "48": "icon48.png",
          "128": "icon128.png" 
    },
  "permissions": [
    "tabs", 
    "http://*/*", 
    "https://*/*",
    "storage"
  ],
  "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["jquery.js", "sendTabs.js", "playSurpriseSounds.js", "inject.js"]
        }
  ],
  "web_accessible_resources": [
      "manifest.json"
  ]
}